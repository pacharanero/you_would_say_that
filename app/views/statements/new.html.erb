<h1>New Statement</h1>

<%= form_for :statement, url: statements_path do |f| %>
  <p>
    <%= f.label :statement_metadata %>
    <%= f.text_field :statement_metadata %>
  </p>
  
  <p>
    <%= f.label :statement_body %><br>
    <%= f.text_area :statement_body %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

